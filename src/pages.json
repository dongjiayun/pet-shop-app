{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index"
		},
        {
            "path": "pages/index/mine"
        }
	],
    "subPackages": [
        {
            "root": "pages/auth",
            "pages":[
                {
                    "path": "signin"
                },
                {
                    "path": "signup"
                },
                {
                    "path": "resetPassword"
                }
            ]
        },
        {
            "root": "pages/mine",
            "pages":[
                {
                    "path": "editNickname"
                }
            ]
        },
        {
            "root": "pages/pet",
            "pages":[
                {
                    "path": "index"
                },
                {
                    "path": "create"
                }
            ]
        }
    ],
    "tabBar": {
        "backgroundColor": "#FFF5F8",
        "borderStyle": "white",
        "color": "#666666",
        "selectedColor": "#FF7391",
        "list": [
            {
                "pagePath": "pages/index/index",
                "text": "首页",
                "iconPath": "static/tabbar/homeicon1_.png",
                "selectedIconPath": "static/tabbar/homeicon1.png"
            },
            {
                "pagePath": "pages/index/mine",
                "text": "个人中心",
                "iconPath": "static/tabbar/homeicon2_.png",
                "selectedIconPath": "static/tabbar/homeicon2.png"
            }
        ]
    },
	"globalStyle": {
        "navigationStyle": "custom",
		"backgroundColor": "#F8F8F8"
	},
    "condition": {
        "current": 0,
        "list": [
            {
                "name": "修改昵称",
                "path": "pages/mine/editNickname"
            },
            {
                "name": "添加宠物",
                "path": "pages/pet/create"
            }
        ]
    }
}


